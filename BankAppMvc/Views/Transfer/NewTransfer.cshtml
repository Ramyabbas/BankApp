@model BankAppMvc.ViewModels.NewTransferViewModel

@{
    ViewData["Title"] = "Överföring";
}

<section class="py-5">
    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Överföring</h3>
                </div>

                <div class="card-body">
                    @using (Html.BeginForm("NewTransfer", "Transfer", FormMethod.Post))
                    {
                            <div class="form-group">
                                <label asp-for="AccountId">Skicka från konto: </label>
                                <input class="form-control" asp-for="AccountId">
                                <span asp-validation-for="AccountId" class="field-validation-error"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AccountReceiversId">Skicka till konto: </label>
                                <input class="form-control" asp-for="AccountReceiversId">
                                <span asp-validation-for="AccountReceiversId" class="field-validation-error"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Amount">Ange belopp: </label>
                                <input class="form-control" asp-for="Amount">
                                <span asp-validation-for="Amount" class="field-validation-error"></span>
                            </div>

                            <button type="submit" class="btn btn-primary">Skicka</button>
                    }
                    </div>

            </div>

        </div>
    </div>
</section>