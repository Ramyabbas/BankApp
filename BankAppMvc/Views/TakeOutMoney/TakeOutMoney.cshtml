@model BankAppMvc.ViewModels.TakeOutMoneyViewModel

@{
    ViewData["Title"] = "Ta ut";
}

<section class="py-5">
    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Ta ut</h3>
                </div>

                <div class="card-body">
                    @using (Html.BeginForm("TakeOutMoney", "TakeOutMoney", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label asp-for="AccountId">Ta ut pengar från konto: </label>
                            <input class="form-control" asp-for="AccountId" name="AccountId">
                            <span asp-validation-for="AccountId" class="field-validation-error"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Amount">Ange belopp: </label>
                            <input class="form-control" asp-for="Amount" name="Amount">
                            <span asp-validation-for="Amount" class="field-validation-error"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Ta ut</button>
                    }
                </div>

            </div>

        </div>
    </div>
</section>